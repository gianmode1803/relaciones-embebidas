<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Ciudad</th>
      <th>Posicion</th>
      <th>Dorsal</th>
      <th>Pais</th>
      <th>Idiomas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.nombre %></td>
        <td><%= player.apellido %></td>
        <td><%= player.ciudad_nacimiento %></td>
        <td><%= player.posicion %></td>
        <td><%= player.dorsal %></td>
        <td><%= player.team.nombre %></td>
        <td> <%player.languages.each do |i|%>
              <%=i.nombre%>,
             <%end%> </td>

        <!--<td><%= Team.find(player.team) %></td>-->
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

